<UserControl x:Class="Client__.Net_.UserControls.NewGroupControl"
             x:Name="NewGroupControlMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d"
             d:DesignHeight="430"
             d:DesignWidth="200"
             RenderTransformOrigin="0.5,0.5"
             Opacity="1">

    <UserControl.Resources>
        <Storyboard x:Key="SlideAndFadeIn">
            <!-- Slide from left (-300 to 0) -->
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-250"
                             To="0"
                             Duration="0:0:0.5"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8" />

            <!-- Fade-in effect (0 to 1 opacity) -->
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />
        </Storyboard>

        <!-- Slide & Fade OUT Animation -->
        <Storyboard x:Key="SlideAndFadeOut">
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="0"
                             To="-250"
                             Duration="0:0:0.5"
                             AccelerationRatio="0.2"
                             DecelerationRatio="0.8" />
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />
        </Storyboard>

    </UserControl.Resources>


    <UserControl.RenderTransform>
        <TranslateTransform X="-250" />
    </UserControl.RenderTransform>

    <Grid>
        <Border Background="#2f3136"
                CornerRadius="0,8,8,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Content="Create New Group"
                       Foreground="#7c818d"
                       FontSize="19"
                       VerticalAlignment="Center"
                       Margin=" 2 0 0 0"/>

                <Button Grid.Row="0"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,5,2,0"
                        BorderThickness="0"
                        Padding="0"
                        Command="{Binding TogglePanelCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <fa:IconImage Icon="CircleXmark"
                                  Foreground="LightGray"
                                  HorizontalAlignment="Center" />
                </Button>

                <Rectangle Grid.Row="1"
                           Fill="#292B2F" />

                <TextBox Grid.Row="1"
                         Height="40"
                         Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Group name"
                         FontSize="17"
                         Padding="5,8,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         />

                <Border Grid.Row="2"
                        Background="#1d1f21"
                        CornerRadius="0,0,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <Label Content="Select Friends"
                                   Foreground="#c5c8cd"
                                   FontSize="14"
                                   Margin="2 3 0 0"/>

                            <ListView x:Name="lvListFriends"
                                      Margin="5"
                                      Width="auto"
                                      Height="auto"
                                      MaxHeight="280"
                                      Foreground="White"
                                      ItemsSource="{Binding UsernamesList}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      SelectionMode="Multiple"
                                      SelectionChanged="ListBox_SelectionChanged"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                      >

                            </ListView>
                        </StackPanel>

                        <Button Grid.Row="1"
                                Width="70"
                                Height="35"
                                HorizontalAlignment="Right"
                                Margin="0 0 5 5"
                                Content="Create"
                                Padding="0,0,0,2"
                                FontSize="14"
                                Foreground="Black"
                                Background="{Binding User.SelectedColor}"
                                BorderThickness="0"
                                Style="{StaticResource MaterialDesignFlatAccentButton}"
                                Command="{Binding CreateGroupCommand}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</UserControl>