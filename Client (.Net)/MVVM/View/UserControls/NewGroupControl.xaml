<UserControl x:Class="Client__.Net_.MVVM.View.UserControls.NewGroupControl"
             x:Name="NewGroupControlMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client__.Net_.MVVM.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200"
             RenderTransformOrigin="0.5,0.5"
             Opacity="100">

    <UserControl.Resources>
        <Storyboard x:Key="SlideAndFadeIn">
            <!-- Slide from left (-300 to 0) -->
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-250" To="0"
                             Duration="0:0:0.5"
                             AccelerationRatio="0.2" DecelerationRatio="0.8"/>

            <!-- Fade-in effect (0 to 1 opacity) -->
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Slide & Fade OUT Animation -->
        <Storyboard x:Key="SlideAndFadeOut">
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                         From="0" To="-250"
                         Duration="0:0:0.5"
                         AccelerationRatio="0.2" DecelerationRatio="0.8"/>
            <DoubleAnimation Storyboard.TargetName="NewGroupControlMenu"
                             Storyboard.TargetProperty="Opacity"
                         From="1" To="0"
                         Duration="0:0:0.5"/>
        </Storyboard>

    </UserControl.Resources>
    
    
    

    <UserControl.RenderTransform>
        <TranslateTransform X="-250"/>
    </UserControl.RenderTransform>

    <Grid>
        <Border Background="#2f3136"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,8,8,0"
                        Foreground="#c5c8cd"
                        Background="#3b3e44"
                        BorderThickness="0"
                        Padding="0"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <fa:IconImage Icon="X"
                                  Height="15"
                                  Width="15"
                                  Foreground="LightGray"
                                  HorizontalAlignment="Center" />
                </Button>

                <Rectangle Grid.Row="1" Fill="#292B2F"/>
                
                <TextBox Grid.Row="1" 
                         Height="35"
                         materialDesign:HintAssist.Hint="Search"
                         FontSize="15"
                         Padding="10,7,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White" />

                <Grid Grid.Row="2"
                        Background="#1d1f21">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ListView Margin="5"
                              Width="auto"
                              Height="160"
                              Foreground="White"
                              ItemsSource="{Binding Groups}"
                              IsSynchronizedWithCurrentItem="True"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                              ItemContainerStyle="{StaticResource GroupCard}">

                    </ListView>

                    <Button Grid.Row="1"
                            Width="60"
                            Height="25"
                            HorizontalAlignment="Right"
                            Margin="2"
                            Content="Create"
                            Padding="0,0,0,2"
                            FontSize="13"
                            Foreground="#c5c8cd"
                            Background="#868c96"
                            BorderThickness="0"
                            Style="{StaticResource MaterialDesignFlatAccentButton}"/>
                </Grid>
                
            </Grid>
        </Border>
        
    </Grid>
</UserControl>