<UserControl x:Class="Client__.Net_.MVVM.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client__.Net_.MVVM.View" 
             xmlns:viewmodel="clr-namespace:Client__.Net_.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:SettingsViewModel}"
             Background="#36393F"
             mc:Ignorable="d">

    
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel >
                    <Label Height="25"
                           Content=" Server IP/URL"
                           FontSize="14"
                           Foreground="White"
                           Padding="0"/>
                    <TextBox Height="25"
                             FontSize="14"
                             Width="300"
                             Text="{Binding ServerUrl}"/>
                </StackPanel>
                <StackPanel>
                    <Label Height="25"
                           Content=" Server Port"
                           FontSize="14"
                           Padding="0,0,5,0"
                           Foreground="White"/>
                    <TextBox Height="25"
                             FontSize="14"
                             Width="50"
                             Text="{Binding ServerPort}"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="Ping Server"
                            Padding="5"
                            Command="{Binding PingCommand}"/>
                    <Button Content="Save"
                            Padding="5"
                            Command="{Binding SaveCommand}"/>
                </StackPanel>

                <Label Content="{Binding Pinged}"
                       Height="25"
                       VerticalAlignment="Top"
                       Padding="5,0,5,0"
                       FontSize="14"
                       Foreground="White"/>
            </StackPanel>
            <StackPanel >
                <Label Height="25"
                       Content=" Supabase URL"
                       FontSize="14"
                       Foreground="White"
                       Padding="0"/>
                <TextBox Height="25"
                         FontSize="14"
                         Width="300"
                         HorizontalAlignment="Left"
                         Text="{Binding SupabaseProjectURL}"/>
            </StackPanel>
            <StackPanel >
                <Label Height="25"
                       Content=" Supabase API Key"
                       FontSize="14"
                       Foreground="White"
                       Padding="0"/>
                <TextBox Height="25"
                         FontSize="14"
                         Width="300"
                         HorizontalAlignment="Left"
                         Text="{Binding SupabaseApiKey}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
