<Window x:Class="Client__.Net_.MVVM.View.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client__.Net_.MVVM.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Height="700"
        Width="460"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <local:LoginViewModel/>
    </Window.DataContext>
    
    <materialDesign:Card UniformCornerRadius="15"
                         Background="#333333"
                         Margin="25">
        <materialDesign:DialogHost CloseOnClickAway="True"
                                   x:Name="DialogHost">
            <StackPanel>
                <Button Margin="0,5,0,0"
                        Background="Transparent"
                        Padding="0"
                        Width="60"
                        Height="50"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="Button_Click">
                    <fa:IconImage Icon="CircleXmark"
                                  Foreground="LightGray" />
                </Button>

                <fa:IconImage Margin="0 10 0 5"
                              Icon="Comments"
                              Foreground="LightGray"
                              Height="120"
                              Width="200" />

                <TextBlock Margin="0 25 0 5"
                           HorizontalAlignment="Center"
                           FontSize="40"
                           FontWeight="Bold"
                           Text="Welcome!!!"
                           Foreground="LightGray" />
                <TextBlock FontSize="17"
                           FontWeight="SemiBold"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Text="Login with your username" />

                <TextBox Margin="0 50 0 0"
                         Width="300"
                         FontSize="15"
                         Foreground="LightGray"
                         materialDesign:HintAssist.Hint="Enter Username"
                         BorderThickness="2"
                         Text="{Binding Username}"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <TextBox Margin="0 20 0 0"
                         Width="300"
                         FontSize="15"
                         Foreground="LightGray"
                         materialDesign:HintAssist.Hint="Enter Password"
                         BorderThickness="2"
                         Text="{Binding Password}"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />



                <Button Margin="0 50 0 0"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Height="53"
                        Width="300"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        FontSize="18"
                        Content="LOGIN"
                        Command="{Binding LoginCommand}" />
                
                <Button Width="120"
                        Margin="0 20 10 0"
                        FontSize="15"
                        Content="Create new user"
                        HorizontalAlignment="Right"
                        Foreground="LightGray"
                        Command="{Binding OpenUserProfileAddCommand}"
                        >
                    <Button.Style>
                    <Style TargetType="Button">
                        <!-- Remove background and border -->
                        <Setter Property="Background"
                                Value="Transparent" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />
                        <Setter Property="BorderThickness"
                                Value="0" />

                        <Style.Triggers>
                            <!-- Change foreground color on mouse hover -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Foreground"
                                            Value="Black" />
                                <!-- Remove the background when hovering -->
                                <Setter Property="Background"
                                        Value="DarkGray" />
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="False">
                                <Setter Property="Foreground"
                                        Value="Black" />
                                <!-- Ensure no background when mouse is not hovering -->
                                <Setter Property="Background"
                                        Value="Transparent" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                </Button>
            
            </StackPanel>
        </materialDesign:DialogHost>
    </materialDesign:Card>

</Window>
