<Window x:Class="Chat_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_App"
        xmlns:viewmodel="clr-namespace:Chat_App.MVVM.ViewModel"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:userControls="clr-namespace:Client__.Net_.MVVM.View.UserControls"
        mc:Ignorable="d"
        Height="500"
        MinHeight="300"
        Width="800"
        MinWidth="500"
        Background="#36393F"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="15"
                      GlassFrameThickness="5"/>
    </WindowChrome.WindowChrome>


    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>
    
    

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <!-- Title Bar -->
        <Border Grid.ColumnSpan="2"
                Background="#252525"
                MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch"
                  Margin="5 5 5 5">
                <Label x:Name="lbl_title"
                       Content="Chat App"
                       Margin="0 0 0 0"
                       Foreground="Gray"
                       FontWeight="SemiBold"
                       FontSize="18"
                       VerticalAlignment="Center" />

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    
                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Minimise_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="WindowMinimize"
                                      Foreground="LightGray" />
                    </Button>
                    
                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Maximise_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="WindowMaximize"
                                      Foreground="LightGray" />
                    </Button>
                    
                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Exit_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="Xmark"
                                      Foreground="LightGray"/>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1"
              Panel.ZIndex="2"
              Background="#2f3136">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!-- User List Section -->
            <Grid Background="#292B2F">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         Height="35"
                         materialDesign:HintAssist.Hint="Search"
                         FontSize="18"
                         Padding="10,7,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White" />

                <Button Grid.Column="2"
                        Background="Transparent"
                        Width="35"
                        Height="21"
                        Padding="0"
                        Margin="0 3 2 3"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <fa:IconImage Icon="MagnifyingGlass"
                                  Foreground="LightGray" />
                </Button>
            </Grid>
                
                <!--<Button Height="25"
                        Content="Connect"
                        Command="{Binding ConnectToServerCommand}" />-->
                
            

            <StackPanel Grid.Row="1">

                <Grid>
                    <!--Use for underlined text-->
                    <TextBlock Margin="10,5,0,0"
                               FontSize="17"
                               Foreground="White"
                               HorizontalAlignment="Left">
                        <Underline>
                            <Run Text="Groups" />
                        </Underline>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Margin="5"
                                Click="Button_Click"
                                Background="Transparent"
                                Padding="0"
                                Width="30"
                                Height="25"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding OpenAddGroupCommand}">
                            <fa:IconImage Icon="Edit"
                                          Height="15"
                                          Width="15"
                                          Foreground="LightGray"
                                          HorizontalAlignment="Center" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!--<ListBox x:Name="groupChats"
                         Margin="5,5,5,0"
                         Width="auto"
                         Height="250"
                         Background="Transparent" />-->

                <ListView x:Name="lvGroupList" 
                          Margin="5"
                          Width="auto"
                          Height="auto"
                          MaxHeight="310"
                          Foreground="White"
                          ItemsSource="{Binding Groups}"
                          IsSynchronizedWithCurrentItem="True"
                          Background="Transparent"
                          BorderThickness="0"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                          ItemContainerStyle="{StaticResource GroupCard}">
                    
                </ListView>
            </StackPanel>

            <!-- Footer Section -->
            <Grid Grid.Row="2"
                  Background="#292b2f">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.25*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border CornerRadius="25"
                            Width="30"
                            Height="30"
                            Background="{Binding User.SelectedColor}"
                            HorizontalAlignment="Center"
                            MouseDown="Border_MouseDown_1"
                            Cursor="Hand"
                            />
                </Grid>

                <Grid Grid.Column="1"
                      HorizontalAlignment="Center">
                    <StackPanel>
                        <Label Content="{Binding User.Username, TargetNullValue=Username}"
                               x:Name="lbl_username"
                               FontSize="15"
                               Foreground="White"
                               FontWeight="SemiBold"
                               Margin="0,9,0,-5" />
                        <Label Content="Custom Status"
                               Foreground="Gray"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10" />
                    </StackPanel>
                    
                </Grid>

                <Grid Grid.Column="2">
                    <Button Margin="0,0,0,0"
                            Background="Transparent"
                            Padding="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding OpenSettingsCommand}">
                        <fa:IconImage Icon="Gear"
                                      Foreground="LightGray"
                                      HorizontalAlignment="Center" />
                    </Button>
                </Grid>

            </Grid>
            
        </Grid>


        <!-- Chat Section -->
        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            

            <userControls:ShadeControl
                Panel.ZIndex="1"
                x:Name="ShadeControlMenu"
                Opacity="0"
                Visibility="Hidden"
                Grid.RowSpan="2"/>
            
            <userControls:NewGroupControl
                Panel.ZIndex="1"
                Grid.RowSpan="2"
                x:Name="NewGroupControlMenus"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Width="250"
                Height="430"/>

            <!--message feed-->
            <ListView x:Name="lvMessageList"
                      Foreground="White"
                      ItemsSource="{Binding Messages}"
                      IsSynchronizedWithCurrentItem="True"
                      Background="Transparent"
                      BorderThickness="0"
                      Margin="8,0,0,0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical">

                
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5"
                                Padding="10"
                                CornerRadius="8"
                                Background="#333"
                                HorizontalAlignment="Left"
                                MinWidth="150"
                                MaxWidth="600">
                            <StackPanel>
                                <!-- Username on top -->
                                <TextBlock Text="{Binding username}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#84888E"
                                           Margin="0,0,0,5" />
                                <!-- Message content in the middle -->
                                <TextBlock Text="{Binding message}"
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Foreground="White"
                                           Margin="0,0,0,5" />
                                <!-- Timestamp at the bottom -->
                                <TextBlock Text="{Binding timestamp}"
                                           FontSize="10"
                                           Foreground="#aaa"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,0,0" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            
            <!--Message box-->
            <Grid Grid.Row="1"
                  VerticalAlignment="Bottom"
                  Panel.ZIndex="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="630*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Rectangle Grid.ColumnSpan="2"
                           Height="58"
                           Fill="#36393F"
                           VerticalAlignment="Bottom"/>
                <TextBox Height="50"
                         FontSize="14"
                         BorderThickness="0"
                         Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MessageBox}"
                         Foreground="white"
                         Grid.Column="0"
                         KeyDown="TextBox_KeyDown"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="8,8,8,10" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Grid.Column="2"
                            Margin="10,0,0,0">
                    <Button Width="75"
                            Content="Send"
                            Command="{Binding SendMessageCommand}"
                            Background="{Binding User.SelectedColor}"
                            BorderThickness="0"
                            Height="50"
                             />
                </StackPanel>
                
            </Grid>
        </Grid>
    </Grid>
</Window>