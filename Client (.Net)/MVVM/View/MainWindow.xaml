<Window x:Class="Chat_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Client__.Net_.MVVM.ViewModel"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:userControls="clr-namespace:Client__.Net_.UserControls"
        mc:Ignorable="d"
        Height="500"
        MinHeight="300"
        Width="900"
        MinWidth="500"
        Background="#36393F"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      CornerRadius="15"
                      GlassFrameThickness="5" />
    </WindowChrome.WindowChrome>



    <!--<Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>-->

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <!-- Title Bar -->
        <Border Grid.ColumnSpan="2"
                Background="#252525"
                MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch"
                  Margin="5 5 5 5">
                <Label x:Name="lbl_title"
                       Content="Chat App"
                       Margin="0 0 0 0"
                       Foreground="Gray"
                       FontWeight="SemiBold"
                       FontSize="18"
                       VerticalAlignment="Center" />

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">

                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Minimise_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="WindowMinimize"
                                      Foreground="LightGray" />
                    </Button>

                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Maximise_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="WindowMaximize"
                                      Foreground="LightGray" />
                    </Button>

                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Exit_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="Xmark"
                                      Foreground="LightGray" />
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1"
              Panel.ZIndex="2"
              Background="#2f3136">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <!-- User List Section -->
            <Grid Background="#292B2F">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Height="35"
                         materialDesign:HintAssist.Hint="Search"
                         FontSize="18"
                         Padding="10,7,0,0"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter"
                                    Command="{Binding SearchGroupsCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <Button Grid.Column="2"
                        Width="22"
                        Height="22"
                        Margin="0 0 0 0"
                        Padding="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding SearchGroupsCommand}">
                    <fa:IconImage Icon="MagnifyingGlass"
                                  Foreground="LightGray" />
                </Button>
            </Grid>


            <StackPanel Grid.Row="1">

                <Grid>
                    <!--Use for underlined text-->
                    <TextBlock Margin="10,5,0,0"
                               FontSize="18"
                               Foreground="White"
                               HorizontalAlignment="Left">
                        <Underline>
                            <Run Text="Groups" />
                        </Underline>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Click="Button_Click"
                                Padding="0"
                                Width="22"
                                Height="22"
                                Margin="0 4 9 0"
                                Style="{StaticResource MaterialDesignFlatButton}">
                            <fa:IconImage Icon="Edit"
                                          Foreground="LightGray"
                                          HorizontalAlignment="Center" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Actual ListView -->
                <ListView x:Name="lvGroupList"
                          Margin="5"
                          Width="auto"
                          Height="auto"
                          Foreground="White"
                          ItemsSource="{Binding Groups}"
                          IsSynchronizedWithCurrentItem="False"
                          Background="Transparent"
                          BorderThickness="0"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                          ItemContainerStyle="{StaticResource GroupsCard}"
                          SelectionChanged="lvGroupList_SelectionChanged">
                    <ListView.Style>
                        <Style TargetType="ListView">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGroupsLoading}"
                                             Value="True">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Style>
                </ListView>

                <!-- Skeleton Loader -->
                <StackPanel Margin="5">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGroupsLoading}"
                                             Value="True">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Height="50"
                            Background="#444444"
                            CornerRadius="5"
                            Margin="5" />
                    <Border Height="50"
                            Background="#444444"
                            CornerRadius="5"
                            Margin="5" />
                    <Border Height="50"
                            Background="#444444"
                            CornerRadius="5"
                            Margin="5" />
                </StackPanel>
            </StackPanel>

            <!-- Footer Section -->
            <Grid Grid.Row="2"
                  Background="#292b2f">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.25*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border CornerRadius="25"
                            Width="30"
                            Height="30"
                            Background="{Binding User.SelectedColor}"
                            HorizontalAlignment="Center"
                            Cursor="Hand"
                            MouseDown="Border_OpenEditProfile"
                            Margin="0,3,0,2" />
                </Grid>

                <Grid Grid.Column="1"
                      HorizontalAlignment="Center">
                    <StackPanel>
                        <Label Content="{Binding User.Username, TargetNullValue=Username}"
                               x:Name="lbl_username"
                               FontSize="15"
                               Foreground="White"
                               FontWeight="SemiBold"
                               Margin="0,9,0,-5" />
                        <Label Content="Custom Status"
                               Foreground="Gray"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10" />

                    </StackPanel>

                </Grid>

                <Grid Grid.Column="2">
                    <Button Margin="0,0,0,0"
                            Background="Transparent"
                            Padding="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding OpenSettingsCommand}">
                        <fa:IconImage Icon="Gear"
                                      Foreground="LightGray"
                                      HorizontalAlignment="Center" />
                    </Button>
                </Grid>

            </Grid>

        </Grid>


        <!-- Chat Section -->
        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="365*" />
                <RowDefinition Height="68" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="630*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>


            <userControls:ShadeControl  Panel.ZIndex="{Binding DataContext.ShadeControlMenuZIndex, RelativeSource={RelativeSource AncestorType=Window}}"
                                        x:Name="ShadeControlMenu"
                                        Opacity="0.7"
                                        Grid.ColumnSpan="2"
                                        ShadeMessage=""
                                        MessageVisibility="{Binding DataContext.ShadeMessageVisibility,Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Visibility="{Binding DataContext.ShadeControlVisibility,Mode=TwoWay, RelativeSource={RelativeSource AncestorType=Window}}"
                                        Grid.RowSpan="4" />
            <userControls:NewGroupControl Panel.ZIndex="1"
                                          Grid.RowSpan="4"
                                          x:Name="NewGroupControlMenus"
                                          VerticalAlignment="Top"
                                          HorizontalAlignment="Left"
                                          Width="210"
                                          Height="450"
                                          DataContext="{Binding NewGroupVM}" />



            <!-- Actual Message ListView -->
            <ListView x:Name="lvMessageList"
                      Foreground="White"
                      ItemsSource="{Binding Messages}"
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.ColumnSpan="2"
                      Margin="8,2,0,33"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Grid.RowSpan="3">

                <!-- Style for ListView Items to control alignment -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Style.Triggers>
                            <!-- Current User Message (Align Right) -->
                            <DataTrigger Binding="{Binding IsCurrentUser}"
                                         Value="True">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Right" />
                            </DataTrigger>
                            <!-- Other Users' Messages (Align Left) -->
                            <DataTrigger Binding="{Binding IsCurrentUser}"
                                         Value="False">
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Left" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                                Padding="10"
                                CornerRadius="8"
                                MinWidth="150"
                                MaxWidth="600"
                                Background="{Binding IsCurrentUser, Converter={StaticResource MessageBackgroundConverter}}"
                                Margin="20 5 20 0">
                            <StackPanel>
                                <!-- Username (Can be hidden for current user if needed) -->
                                <TextBlock Text="{Binding username}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#84888E"
                                           Margin="0,0,0,5" />
                                <!-- Message Content -->
                                <TextBlock Text="{Binding message}"
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Foreground="White"
                                           Margin="0,0,0,5" />
                                <!-- Timestamp -->
                                <TextBlock Text="{Binding DisplaySentAt}"
                                           FontSize="10"
                                           Foreground="#aaa"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



            <!-- Skeleton Loader -->
            <StackPanel Margin="8,2,0,33"
                        Grid.ColumnSpan="2"
                        Grid.RowSpan="2">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility"
                                Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMessagesLoading}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <!-- Simulated loading items -->
                <Border Height="60"
                        Background="#444444"
                        CornerRadius="5"
                        Margin="5" />
                <Border Height="60"
                        Background="#444444"
                        CornerRadius="5"
                        Margin="5" />
                <Border Height="60"
                        Background="#444444"
                        CornerRadius="5"
                        Margin="5" />
            </StackPanel>

            <TextBlock FontSize="35"
                       Foreground="#AAAAAA"
                       Margin="80 0 0 0"
                       VerticalAlignment="Center"
                       TextAlignment="Center">
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource GroupStatusToMessageConverter}">
                        <Binding Path="Groups.Count" />
                        <Binding Path="SelectedGroup" />
                    </MultiBinding>
                </TextBlock.Visibility>
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource GroupStatusToMessageConverter}">
                        <Binding Path="Groups.Count" />
                        <Binding Path="SelectedGroup" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>


            <!--Message box-->
            <Rectangle Grid.ColumnSpan="2"
                       Grid.Row="1"
                       Height="68"
                       Fill="#36393F"
                       VerticalAlignment="Bottom" />
            <TextBox x:Name="MessageTextBox"
                     Height="auto"
                     Grid.Column="0"
                     Grid.RowSpan="2"
                     MinHeight="40"
                     MaxHeight="200"
                     FontSize="14"
                     BorderThickness="0"
                     VerticalAlignment="Bottom"
                     Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource MessageBox}"
                     Foreground="white"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="8,7,8,11"
                     TextChanged="MessageTextBox_TextChanged"
                     KeyDown="MessageTextBox_KeyDown"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Grid.Column="1"
                        Grid.Row="1"
                        Margin="10,0,0,0">
                <Button Width="75"
                        Content="Send"
                        Command="{Binding SendMessageCommand}"
                        Background="{Binding User.SelectedColor}"
                        BorderThickness="0"
                        Height="50" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>