<Window x:Class="Chat_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_App"
        xmlns:viewmodel="clr-namespace:Chat_App.MVVM.ViewModel"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Height="500"
        Width="900"
        Background="#36393F"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen">


    <Window.DataContext>
        <viewmodel:MainViewModel />
    </Window.DataContext>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="200"/>
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <!-- Title Bar -->
        <Border Grid.ColumnSpan="2"
                Background="#252525"
                MouseDown="Border_MouseDown">
            <Grid HorizontalAlignment="Stretch"
                  Margin="5 5 5 5">
                <Label x:Name="lbl_title"
                       Content="Chat App"
                       Margin="5 0 0 0"
                       Foreground="Gray"
                       FontWeight="SemiBold"
                       FontSize="15"
                       VerticalAlignment="Center" />

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    
                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Minimise_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="WindowMinimize"
                                      Foreground="LightGray" />
                    </Button>
                    
                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Maximise_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="WindowMaximize"
                                      Foreground="LightGray" />
                    </Button>
                    
                    <Button Margin="0,5,0,5"
                            Background="Transparent"
                            Width="50"
                            Height="30"
                            HorizontalAlignment="Right"
                            Click="Exit_Click"
                            Style="{StaticResource MaterialDesignFlatButton}">
                        <fa:IconImage Icon="Xmark"
                                      Foreground="LightGray"/>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1"
              Background="#2f3136">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- User List Section -->
            <StackPanel Grid.Row="0">
                <TextBox Height="25"
                         FontSize="14"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Padding="5,0,10,0"
                         Background="#2f3136"
                         Foreground="White" />
                <Button Height="25"
                        Content="Connect"
                        Command="{Binding ConnectToServerCommand}" />
            </StackPanel>

            <StackPanel Grid.Row="1">

                <!--Use for underlined text-->
                <TextBlock Margin="10,10,0,0"
                           Foreground="White">
                 <Underline>
                     <Run Text="Groups" />
                 </Underline>
                </TextBlock>

                <ListBox x:Name="groupChats"
                         Margin="5,5,5,0"
                         Width="auto"
                         Height="250"
                         Background="Transparent" />
            </StackPanel>

            <!-- Footer Section -->
            <Grid Grid.Row="2"
                  Background="#292b2f">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.25*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Border CornerRadius="25"
                            Width="30"
                            Height="30"
                            Background="#3bff6f"
                            HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Column="1"
                      HorizontalAlignment="Center">
                    <StackPanel>
                        <Label Content="{Binding ConnectedUsername, TargetNullValue=Username}"
                               x:Name="lbl_username"
                               FontSize="12"
                               Foreground="White"
                               FontWeight="SemiBold"
                               Margin="0,5,0,-5" />
                        <Label Content="Custom Status"
                               Foreground="Gray"
                               FontWeight="SemiBold"
                               FontSize="11"
                               Margin="0,0,0,10" />
                    </StackPanel>
                    
                </Grid>

                <Grid Grid.Column="2">
                    <fa:IconImage Icon="Gear"
                                  Foreground="LightGray"
                                  Width="30"
                                  Height="30"
                                  HorizontalAlignment="Center" />
                </Grid>

            </Grid>
            
        </Grid>


        <!-- Chat Section -->
        <Grid Grid.Column="1"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <ListView Foreground="White"
                      ItemsSource="{Binding Messages}"
                      Background="Transparent"
                      BorderThickness="0"
                      Margin="8,0,0,0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5"
                                Padding="10"
                                CornerRadius="8"
                                Background="#333"
                                HorizontalAlignment="Left"
                                MinWidth="150"
                                MaxWidth="600">
                            <StackPanel>
                                <!-- Username on top -->
                                <TextBlock Text="{Binding username}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#4CAF50"
                                           Margin="0,0,0,5" />
                                <!-- Message content in the middle -->
                                <TextBlock Text="{Binding message}"
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Foreground="White"
                                           Margin="0,0,0,5" />
                                <!-- Timestamp at the bottom -->
                                <TextBlock Text="{Binding timestamp}"
                                           FontSize="10"
                                           Foreground="#aaa"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom"
                                           Margin="0,0,0,0" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <Grid Grid.Row="1"
                  Margin="0,10,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="71*" />
                    <ColumnDefinition Width="559*" />
                    <ColumnDefinition Width="90" />
                </Grid.ColumnDefinitions>
                <TextBox Height="50"
                         FontSize="14"
                         Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MessageBox}"
                         Foreground="white"
                         Grid.Column="0"
                         KeyDown="TextBox_KeyDown"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Grid.ColumnSpan="2"
                         Margin="8,8,8,8" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Grid.Column="2"
                            Margin="10,0,0,0">
                    <Button Width="70"
                            Content="Send"
                            Command="{Binding SendMessageCommand}"
                            Height="40"
                            Margin="0,0,10,0" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>