<Window x:Class="Client__.Net_.MVVM.View.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_App"
        xmlns:viewmodel="clr-namespace:Chat_App.MVVM.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="User Profile"
        Height="740"
        Width="460"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <materialDesign:Card UniformCornerRadius="15"
                         Background="#333333"
                         Margin="25">
        <materialDesign:DialogHost CloseOnClickAway="True"
                                   x:Name="DialogHost">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{Binding User.SelectedColor}"
                        Height="60"
                        CornerRadius="15 15 0 0"
                        MouseDown="Border_MouseDown">
                    <TextBlock Text="User Profile"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="LightGray" />
                </Border>

                <Button Margin="0,0,0,0"
                        Background="Transparent"
                        Padding="0"
                        Width="70"
                        Height="60"
                        HorizontalAlignment="Right"
                        Click="Button_Click"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <fa:IconImage Icon="CircleXmark"
                                  Foreground="LightGray"
                                  Height="50"/>
                </Button>

                <StackPanel Grid.Row="1">
                    <fa:IconImage Margin="0 10 0 5"
                              Icon="Comments"
                              Foreground="LightGray"
                              Height="120"
                              Width="200"/>

                    <TextBlock Margin="0 25 0 5"
                           HorizontalAlignment="Center"
                           FontSize="40"
                           FontWeight="Bold"
                           Text="Welcome!!!"
                           Foreground="LightGray" />
                    <TextBlock FontSize="17"
                           FontWeight="SemiBold"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Text="Log in with a new username" />

                    <TextBox Margin="0 30 0 0"
                         x:Name="textUsername"
                         Width="300"
                         FontSize="15"
                         Foreground="LightGray"
                         materialDesign:HintAssist.Hint="Enter Username"
                         BorderThickness="2"
                         Text="{Binding Username}"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <ComboBox Margin="0 10 0 0"
                          x:Name="ColorComboBox"
                          materialDesign:ShadowAssist.ShadowDepth="Depth1"
                          Height="50"
                          Width="300"
                          Padding="10"
                          Foreground="Gray"
                          Background="#333333"
                          FontSize="15"
                          BorderThickness="1"
                          BorderBrush="Gray"
                          SelectedValuePath="Color"
                          SelectionChanged="ColorComboBox_SelectionChanged"
                          DisplayMemberPath="Name">


                    </ComboBox>

                    <!-- Rectangle to Show Selected Color -->
                    <Rectangle Width="300"
                           Height="40"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Stroke="Gray"
                           Margin="0 30 0 20"
                           Fill="{Binding SelectedColor}" />

                    <Button Margin="0 30 0 0"
                        x:Name="loginBtn"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Height="53"
                        Width="300"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        FontSize="18"
                        Content="LOG IN"
                        Background="{Binding User.SelectedColor}"
                        Command="{Binding LoginCommand}"/>
                </StackPanel>
            </Grid>
        </materialDesign:DialogHost>
    </materialDesign:Card>

</Window>
