<Window x:Class="Client__.Net_.MVVM.View.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client__.Net_.MVVM.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d" 
        Title="User Profile"
        Height="760"
        Width="450"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <materialDesign:Card UniformCornerRadius="15"
                         Background="{DynamicResource MaterialDesignPaper}"
                         Margin="25">
        <materialDesign:DialogHost CloseOnClickAway="True"
                                   x:Name="DialogHost">
            <StackPanel>
                <Button Margin="0,10,10,0"
                        Background="Transparent"
                        Width="80"
                        Height="50"
                        HorizontalAlignment="Right"
                        Click="Button_Click"
                        Style="{StaticResource MaterialDesignFlatButton}">
                    <fa:IconImage Icon="CircleXmark"/>
                </Button>

                <Image Margin="0 50 0 5"
                       Source="/Images/logo.png"
                       Height="100"/>

                <TextBlock Margin="0 25 0 5"
                           HorizontalAlignment="Center"
                           FontSize="28"
                           FontWeight="Bold"
                           Text="Welcome Back!"/>
                <TextBlock FontSize="17"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Text="Log in with a new username" />

                <TextBox Margin="0 50 0 0"
                         x:Name="textUsername"
                         Width="300"
                         FontSize="15"
                         materialDesign:HintAssist.Hint="Enter Username"
                         BorderThickness="2"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                
                <Button Margin="0 20 0 0"
                        x:Name="btn_pickColor"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth1"
                        Height="53"
                        Width="300"
                        Background="Transparent"
                        FontSize="15"
                        BorderThickness="1"
                        BorderBrush="Black"
                        Content="Pick a color" />

                <Button Margin="0 50 0 0"
                        x:Name="loginBtn"
                        Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Height="53"
                        Width="300"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        FontSize="18"
                        Content="LOG IN"/>

               
            </StackPanel>
        </materialDesign:DialogHost>
    </materialDesign:Card>
    
</Window>
