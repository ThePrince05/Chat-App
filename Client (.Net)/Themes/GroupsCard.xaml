<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ListViewItem" x:Key="GroupsCard">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#53565f"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#3b3d44"/>
            </Trigger>
        </Style.Triggers>

        <Setter Property="Background" Value="Transparent"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            Height="60"
                            CornerRadius="4"
                            Margin="8,2,8,2"
                            Padding="8">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <!-- Image Column -->
                                <ColumnDefinition Width="*" />
                                <!-- Text Column -->
                            </Grid.ColumnDefinitions>

                            <!-- Group Image -->
                            <Ellipse Width="40"
                                     Height="40"
                                     Grid.Column="0"
                                     VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding ImageSource}" />
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Group Name & Last Message -->
                            <Grid Grid.Column="1"
                                  Margin="10,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Group Name -->
                                <TextBlock Text="{Binding GroupName}"
                                           FontSize="15"
                                           Foreground="White"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis" 
                                           Margin="0 0 0 3"
                                           ToolTip="{Binding GroupName}" />

                                <!-- Last Message -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Messages}"
                                           FontSize="12"
                                           Foreground="#a2a6ae"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="200"
                                           ToolTip="{Binding Messages}" />
                            </Grid>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>